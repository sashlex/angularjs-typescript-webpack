{
   "compilerOptions": {
      "outDir": "./dist/",
      "rootDir": "./app/",
      "sourceMap": false,
      "noImplicitAny": false,
      "module": "esnext",
      "target": "es6",
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "noEmit": false,
      "moduleResolution": "node"
   },
   "include": [
      "./app/**/*"
   ],
   "exclude": [
      "node_modules",
      "dist"
   ]
}
